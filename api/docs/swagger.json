        "common.CommonRequest": {
            "type": "object",
            "properties": {
                "pathParams": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "queryParams": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "request": {}
            }
        },
        "common.CommonResponse": {
            "type": "object",
            "properties": {
                "responseData": {},
                "status": {
                    "$ref": "#/definitions/common.WebStatus"
                }
            }
